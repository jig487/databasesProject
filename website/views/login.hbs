<main class="form-signin w-100 m-auto">
	<form action="/login" id="loginForm" method="POST" novalidate="">
		<img class="mb-4" src="images/logo.svg" alt="" width="72" height="57" />
		<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
		<div class="form-floating">
			<input type="email" class="form-control" id="inputEmail" placeholder="name@example.com"
				name="inputEmail" />
			<label for="floatingInput">Email address</label>
			<div class="invalid-feedback">
				Email is invalid
			</div>
		</div>
		<div class="form-floating">
			<input type="hidden" name="_csrf" value="{{csrfToken}}" />
			<input type="password" class="form-control" id="inputPassword" placeholder="Password"
				name="inputPassword" />
			<label for="floatingPassword">Password</label>
		</div>

		<div class="form-check text-start my-3">
			<input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault" name="remember" />
			<label class="form-check-label" for="flexCheckDefault">
				Remember me
			</label>
		</div>
		{{#if errorMessage}}
		<div class="alert alert-danger" role="alert">
			{{errorMessage}}
		</div>
		{{/if}}
		<button class="btn btn-primary w-100 py-2" type="submit" id="btnLoginSubmit">Sign in</button>
		<div class="text-center my-3">
			Don't have an account? <a href="/sign-up">Create One</a>
		</div>
		<p class="mt-5 mb-3 text-body-secondary">Copyright &copy; 2025 &mdash; Your Company </p>
	</form>
</main>